[alias]
	co=checkout
	com=checkout master
	cam=commit -a -m
	cm=commit -m
	br=branch
	d=diff
	ds=diff --cached
	da=diff HEAD
	dc=describe --contains
	a=add
	graph=log --pretty=format:'%Cred%h %Cgreen%d%Creset %C(cyan)%an %C(yellow)%ad%Creset %s' --graph --branches --all
	wdiff=diff --word-diff
	st=status -sb -uno
	unstage=reset HEAD
	uncommit=reset --soft HEAD^
	killcommit=reset --hard HEAD^
	mrproper=!git reset --hard && git clean -dfx
	root=!pwd
	poule=pull
	choucroute=checkout

[user]
	name = Ivan Delalande
	email = colona@ycc.fr
[core]
	editor = vim
[merge]
	tool = vimdiff
[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto

[tar "tar.xz"]
	command = xz -c
[tar "tar.bz2"]
	command = bzip2
